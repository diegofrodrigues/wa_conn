<odoo>
    <data>
        <record id="view_whatsapp_compose_form" model="ir.ui.view">
            <field name="name">whatsapp.compose.form</field>
            <field name="model">whatsapp.compose</field>
            <field name="arch" type="xml">
                <form string="Send WhatsApp Message">
                    <group>
                        <field name="whatsapp_account_id" required="1"/>
                        <field name="partner_ids" widget="many2many_tags" required="1"/>
                        <field name="message" widget="html" nolabel="1" placeholder="Type your WhatsApp message here..." required="1"/>
                        <field name="whatsapp_media" widget="binary" filename="whatsapp_media_filename"/>
                        <field name="whatsapp_media_filename" invisible="1"/>
                    </group>
                    <footer>
                        <button string="Send" type="object" name="send_message" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- Add button to Sale Order -->
        <record id="action_send_whatsapp_sale_order" model="ir.actions.act_window">
            <field name="name">Enviar WhatsApp</field>
            <field name="res_model">whatsapp.compose</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_whatsapp_compose_form"/> <!-- Pass the view_id -->
            <field name="target">new</field>
            <field name="context">{'default_res_model': 'sale.order', 'default_res_id': active_id}</field> <!-- Correct partner_id reference -->
        </record>

        <record id="view_sale_order_form_inherit_whatsapp" model="ir.ui.view">
            <field name="name">sale.order.form.inherit.whatsapp</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <header>
                    <button name="%(action_send_whatsapp_sale_order)d" type="action" string="WhatsApp" class="btn-secondary" icon="fa-whatsapp"/>
                </header>
            </field>
        </record>

        <!-- Add button to Account Move -->
        <record id="action_send_whatsapp_account_move" model="ir.actions.act_window">
            <field name="name">Send WhatsApp</field>
            <field name="res_model">whatsapp.compose</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_whatsapp_compose_form"/> <!-- Pass the view_id -->
            <field name="target">new</field>
            <field name="context">{'default_res_model': 'account.move', 'default_res_id': active_id}</field> <!-- Correct partner_id reference -->
        </record>

        <record id="view_account_move_form_inherit_whatsapp" model="ir.ui.view">
            <field name="name">account.move.form.inherit.whatsapp</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <header>
                    <button name="%(action_send_whatsapp_account_move)d" type="action" string="WhatsApp" class="btn-secondary" icon="fa-whatsapp"/>
                </header>
            </field>
        </record>
    </data>
</odoo>
